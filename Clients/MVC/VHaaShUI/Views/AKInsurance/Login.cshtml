<body>
    <div class="wrapper fadeInDown, container" style="position:center">
        <div id="formContent">
            <h2 class="active">Sign In</h2>

            <div class="fadeIn first">
                <img src="~/TemplateFiles/images/ALogo.png" style="width:100px;height:100px;" id="icon" alt="User Icom" />
              
            </div>
            
            <form>
                <input type="text" id="Login" class="fedIn second" name="Email" placeholder="Email" />
                <br /><br />
                <input type="password" id="password" class="fadeIn third" name="Password" placeholder="Password" />
                <br /><br />
                <input type="submit" class="fadeIn fourth" value="Log In" />
                <br />
                @Html.ActionLink("Click to SignUp", "Register")
            </form>

            <div id="formfooter">
                <h4>Welcome back ! Be connected with us</h4>
            </div>
        </div>
    </div>


