        a {
            color:#92badd;
            display:inline-block;
            text-decoration:none;
            font-weight:400;
        }
        h2{
            text-align:center;
            font-size:25px;
            text-transform:uppercase;
            display:inline-block;
            margin:40px 8px 10px 8px;
            color:#cccccc;
        }
        .wrapper {
            display:flex;
            align-items:center;
            flex-direction:column;
            justify-content:center;
            width:100%;
            min-height:100%;
            padding:20px;
            margin:150px;
        }

        #formContent {
            -webkit-border-radius: 10px 10px 10px 10px;
            /*border-redius:10px 10px 10px 10px;*/
            background: #fff;
            padding: 30px;
            width: 90%;
            max-width: 450px;
            position: relative;
            padding: 0px;
            -webkit-box-shadow: 0 30px 60px 0 rgba(0,0,0,0.3);  /*to giv box shape to that login window*/
            box-shadow: 0 30px 60px 0 rgba(0,0,0,0.3);
            text-align:center;
        }

        #formfooter {
            color:#39ace7;
            background-color:#f6f6f6;
            border-top:1px solid #dce8f1;
            padding:25px;
            text-align:center;
            /*-wevkit-border-redius:0 0 10px 10px;*/
            /*border-redius:0 0 10px 10px;*/
        }

        h2.active{
            color:#0d0d0d;
            border-bottom:2px solid #0094ff;
        }

        input[type=button], input[type=submit], input[type=reset] {
            background-color: #56baed;
            border: none;
            color: white;
            padding: 15px 80px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            text-transform: uppercase;
            font-size: 13px;
            -webkit-box-shadow: 0 10px 30px 0 rgba(95,786,233,0.4); /*to giv box shape to that sign in button*/
            box-shadow: 0 10px 30px 0 rgba(95,786,233,0.4);
            -webkit-border-radius: 5px 5px 5px 5px; /*to shape rounded to that submit button*/
            margin: 5px 20px 40px 20px;
            -webkit-transition: all 0.3s ease-in-out; /*transmition efect when we click and unclik item*/
            -moz-transition: all 0.3s ease-in-out;
            -o-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }

        input[type=button]:hover, input[type=submit]:hover, input[type=reset]:hover {
            background-color:#39ace7;
        }

            input[type=button]:active, input[type=submit]:active, input[type=reset]:active {
                -moz-transform: scale(0.95);
                -webkit-transform: scale(0.95);
                -o-transform: scale(0.95);
                -ms-transform: scale(0.95);
                transform: scale(0.95);
            }

        input[type=text] {
            background-color: #f6f6f6;
            border: none;
            color: #0d0d0d;
            padding: 15px 32px;
            text-align: left;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 5px;
            width: 70%;
            border: 2px solid #f6f6f6;
            -webkit-transition: all 0.5s ease-in-out; /*transmition efect when we click and unclik item*/
            -moz-transition: all 0.5s ease-in-out;
            -o-transition: all 0.5s ease-in-out;
            transition: all 0.5s ease-in-out;
            -webkit-border-radius: 5px 5px 5px 5px;
            border-radius: 5px 5px 5px 5px;
        }

            input[type=text]:focus {
                background-color: #fff;
                border-bottom: 2px solid #5fbae9;
            }
            input[type=text]::placeholder {
                color: #cccccc;
            }

    input[type=password] {
        background-color: #f6f6f6;
        border: none;
        color: #0d0d0d;
        padding: 15px 32px;
        text-align: left;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 5px;
        width: 70%;
        border: 2px solid #f6f6f6;
        -webkit-transition: all 0.5s ease-in-out; /*transmition efect when we click and unclik item*/
        -moz-transition: all 0.5s ease-in-out;
        -o-transition: all 0.5s ease-in-out;
        transition: all 0.5s ease-in-out;
        -webkit-border-radius: 5px 5px 5px 5px;
        border-radius: 5px 5px 5px 5px;
    }

        input[type=password]:focus {
            background-color: #fff;
            border-bottom: 2px solid #5fbae9;
        }

        input[type=password]::placeholder {
            color: #cccccc;
        }

        /* ANIMATIONS */

        /* Simple CSS3 Fade-in-down Animation */
        .fadeInDown {
            -webkit-animation-name: fadeindown;
            animation-name: fadeInDown;
            -webkit-animation-duration: 1s;
            animation-duration: 1s;
            -webkit-animation-fill-mode: both;
            animation-fill-mode: both;
        }

        @*@-webkit-keyframes fadeindown {
            0% {
                opacity: 0;
                -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
            }

            100% {
                opacity: 1;
                -webkit-transform: none;
                transform: none;
            }
        }*@

        @*@keyframes fadeindown {
